<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="action_llyt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
    </style>

    <style name="action_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:alpha">0.9</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="action_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/bg_action_bar_button</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="action_tv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/bg_action_bar_button</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:alpha">0.9</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
    </style>

    <style name="progress_weather">
        <item name="android:indeterminateDrawable">@drawable/progressbar_circle_1</item>
        <item name="android:minWidth">22dp</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxWidth">22dp</item>
        <item name="android:maxHeight">22dp</item>
    </style>
</resources>
